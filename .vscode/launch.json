{
  "version": "0.2.0",
  "configurations": [

      {
          "type": "chrome",
          "request": "launch",
          "name": "Debug Angular",
          "url": "http://localhost:4200",
          "webRoot": "${workspaceFolder}/apps/apps/sig-app",
          "sourceMaps": true,
          "trace": "verbose",
          "runtimeArgs": [
              "--new-window",
              "--incognito",
              "--remote-debugging-port=9222"
          ]
      },
      {
        "name": "Attach Chrome against, with sourcemaps",
        "type": "chrome",
        "request": "attach",
        "port": 9222,
        "sourceMaps": true,
        "trace": "verbose",
        "webRoot": "${workspaceRoot}"
      }

  ]
}
